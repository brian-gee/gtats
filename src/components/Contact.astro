<div>
  <div class="">
    <h1>Appointment Inquiry</h1>
  </div>
  <!-- component -->
  <div class="flex items-center justify-center p-12">
    <div class="mx-auto w-full max-w-[550px]">
      <form action="" method="POST" enctype="multipart/form-data">
        <div class="mb-5">
          <label for="first_name" class="mb-3 block text-base font-medium">
            First Name
          </label>
          <input
            type="text"
            name="first_name"
            id="first_name"
            placeholder="First Name"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="last_name" class="mb-3 block text-base font-medium">
            Last Name
          </label>
          <input
            type="text"
            name="last_name"
            id="last_name"
            placeholder="Last Name"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="birthday" class="mb-3 block text-base font-medium">
            Birthday
          </label>
          <input
            type="date"
            name="birthday"
            id="birthday"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="email" class="mb-3 block text-base font-medium">
            Email Address
          </label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="example@domain.com"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="country_code" class="mb-3 block text-base font-medium">
            Country Code
          </label>
          <select
            name="country_code"
            id="country_code"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md">
            <option value="">Select Country Code</option>
            <option value="+1">+1</option>
            <option value="+44">+44</option>
            <option value="+61">+61</option>
            <option value="+81">+81</option>
            <option value="+86">+86</option>
            <option value="+91">+91</option>
          </select>
        </div>
        <div class="mb-5">
          <label for="phone" class="mb-3 block text-base font-medium">
            Phone Number
          </label>
          <input
            type="tel"
            name="phone"
            id="phone"
            placeholder="Phone Number"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="address" class="mb-3 block text-base font-medium">
            Address
          </label>
          <input
            type="text"
            name="address"
            id="address"
            placeholder="Street Address"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="city" class="mb-3 block text-base font-medium">
            City</label
          >
          <input
            type="text"
            name="city"
            id="city"
            placeholder="City"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="state" class="mb-3 block text-base font-medium">
            State
          </label>
          <input
            type="text"
            name="state"
            id="state"
            placeholder="State"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="about_tattoo" class="mb-3 block text-base font-medium">
            About the Tattoo
          </label>
          <textarea
            rows="4"
            name="about_tattoo"
            id="about_tattoo"
            placeholder="Type about the tattoo"
            class="w-full resize-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-zin-200 focus:shadow-md"
          ></textarea>
        </div>
        <div class="mb-5">
          <label for="reference_image" class="mb-3 block text-base font-medium">
            Reference Image
          </label>
          <input
            type="file"
            name="reference_image"
            id="reference_image"
            class="w-full py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="image_placement" class="mb-3 block text-base font-medium">
            Image Placement
          </label>
          <input
            type="file"
            name="image_placement"
            id="image_placement"
            class="w-full py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus: shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="placement" class="mb-3 block text-base font-medium">
            Placement
          </label>
          <input
            type="text"
            name="placement"
            id="placement"
            placeholder="Enter placement details"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="availability" class="mb-3 block text-base font-medium">
            Availability
          </label>
          <input
            type="date"
            name="availability"
            id="availability"
            placeholder="Available Dates"
            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label
            for="dates_flexibility"
            class="mb-3 block text-base font-medium">
            Dates and Flexibility
          </label>
          <textarea
            rows="4"
            name="dates_flexibility"
            id="dates_flexibility"
            placeholder="Type available dates and flexibility"
            class="w-full resize-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-zin-200 focus:shadow-md"
          ></textarea>
        </div>
        <div>
          <button
            class="hover:shadow-form rounded-md outline outline-white py-3 px-8 text-base font-semibold text-white outline-none">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
